            </TabItem>
            <TabItem x:Name="Page2" Header="Page2" Selector.Selected="Page2_Selected">
                <Canvas>
                    <Border Height="70" Margin="0,0,668,271" Background="DarkBlue" BorderBrush="Black" BorderThickness="1" CornerRadius="0,0,120,0">
